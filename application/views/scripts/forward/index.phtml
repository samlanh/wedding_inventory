			$('#monthly_rent').val(1);
			calculateDate();
                        $('#return_date').attr("readonly", true);
                        $('#return_date').datepicker('destroy');
		}else{
			$('#monthly_rent').attr("readonly", true);
			$('#monthly_rent').val("");
                        $('#return_date').attr("readonly", false);
                        $('#return_date').datepicker({ changeMonth: true,changeYear: true});
