	}
	function calculateDate(){
		var month_num = $('#monthly_rent').val();
		var current_date = $('#pick_date').val();
		var arrays = current_date.split('-');
		dd = arrays[0];
		mm = arrays[1];
		yy = arrays[2];
	    var today = yy+'-'+mm+'-'+dd;
		var return_date = new Date(today);
		return_date.setMonth(month_num);
		date= formattedDate(return_date);
		$('#return_date').val(date);
	}
	function formattedDate(date) {
	    var d = new Date(date),
	        month = '' + (d.getMonth() + 1),
	        day = '' + d.getDate(),
	        year = d.getFullYear();

	    if (month.length < 2) month = '0' + month;
	    if (day.length < 2) day = '0' + day;

	    return [day,month , year].join('-');
	}
